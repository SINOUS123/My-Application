@model IEnumerable<Product> 

<form method="post">
    <br />
    <div class="backgroundBorder">
        <div class="container row">
            <div class="col-8">
                <div class="card mt-4">
                    <div class="card-header bg-dark ml-0 row container" style="color:white;">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info btn-sm">
                                Continue Shopping
                            </a>
                        </div>
                     </div>
                        <div class="card-body">
                            <div class="d-none d-lg-block">
                                <div class="row" style="color:#821f3d;">
                                    <div class="col-lg-2">
                                    </div>
                                        <div class="col-12 col-lg-7">
                                            Product detatils
                                        </div>
                                        <div class="col-12 col-lg-2">
                                            Price
                                        </div>
                                        <div class="col-12 col-lg-1">
                                        </div>
                                  </div>
                                 
                                </div>
                                 <hr />
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                        <img src="@WC.ImagePath@item.Image" class="rounded" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@item.Name</h5>
                                        <div class="text-justify" style="font-size:11px;">
                                            <p>@item.ShortDesc</p>
                                        </div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span>@(@item.Price.ToString("C"))</span>
                                    </div>
                                    <div class="col-3 col-lg-1 pt-lg-4 text-center">
                                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-danger text-center">Please, Add the item in the cart....</p>
                        }
                        <hr />
                            </div>
                            
                        </div> 
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-6 col-md-3 offset-md-9">
                                    <button type="submit" class="btn btn-primary btn-lg form-control">
                                        <span>Continue</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</form>